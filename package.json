{
	"name": "gtx-i18n-runtime",
	"version": "0.0.1",
	"description": "A gettext-like translation runtime for JavaScript",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": "https://github.com/gflohr/gtx-i18n-runtime",
	"bugs": {
		"url": "https://github.com/gflohr/gtx-i18n-runtime/issues"
	},
	"homepage": "https://github.com/gflohr/gtx-i18n-runtime",
	"scripts": {
		"build": "npm run clean && npm run build:lib && npm run build:lib-esm && npm run build:webpack",
		"build:lib": "tsc",
		"build:lib-esm": "tsc -m es6 --outDir lib-esm",
		"build:webpack": "webpack",
		"clean": "shx rm -rf _bundles lib lib-esm",
		"format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
		"start": "tsc --watch",
		"lint": "eslint './src/**/*.ts'",
		"lint:fix": "eslint --fix './src/**/*.ts'",
		"lint:fix-dry-run": "eslint --fix './src/**/*.ts'",
		"lint:staged": "lint-staged",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"keywords": [],
	"author": "Guido Flohr <guido.flohr@cantanea.com> (http://www.guido.flohr.net/)",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint:staged --concurrency 1 --stream --since origin/master"
		}
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"lint-staged": {
		"*.{js,ts,json,md}": [
			"prettier --write"
		],
		"{src,test}/**/*.ts": [
			"eslint"
		]
	},
	"devDependencies": {
		"@types/gettext-parser": "^4.0.0",
		"@types/jdataview": "0.0.30",
		"@types/jest": "^25.2.1",
		"@types/superagent": "^4.1.7",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"awesome-typescript-loader": "^5.2.1",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.5",
		"jest": "^25.4.0",
		"lint-staged": "^10.1.7",
		"prettier": "^2.0.5",
		"shx": "^0.3.2",
		"terser-webpack-plugin": "^2.3.6",
		"ts-jest": "^25.4.0",
		"ts-node": "^8.9.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^3.8.3",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"@types/detect-node": "^2.0.0",
		"@types/node": "^13.13.2",
		"ajv": "^6.12.2",
		"detect-node": "^2.0.4",
		"jdataview": "^2.5.0",
		"superagent": "^5.2.2"
	}
}
