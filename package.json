{
	"name": "esgettext",
	"description": "gettext like runtime and tools for EcmaScript/JavaScript",
	"keywords": [
		"i18n",
		"l10n",
		"internationalization",
		"localization",
		"javascript",
		"gettext",
		"xgettext"
	],
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"format": "prettier --write *.js *.json *.md && lerna run format",
		"lint": "lerna run lint",
		"lint:fix": "lerna run lint",
		"lint:fix-dry-run": "lerna run lint:fix-dry-run",
		"lint:staged": "lerna run lint:staged",
		"test": "lerna run test",
		"test:cov": "lerna run test:cov",
		"posttest:cov": "node merge-lcov.js packages/*",
		"prepare": "husky"
	},
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"eslint": "^8.56.0",
		"husky": "9.0.3",
		"jest": "^29.7.0",
		"jest-cli": "^29.7.0",
		"lerna": "^8.0.2",
		"lint-staged": "^15.2.0",
		"prettier": "^3.2.4",
		"ts-jest": "^29.1.2"
	}
}
