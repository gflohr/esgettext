{
	"name": "esgettext",
	"description": "gettext like runtime and tools for EcmaScript/JavaScript",
	"keywords": [
		"i18n",
		"l10n",
		"internationalization",
		"localization",
		"javascript",
		"gettext",
		"xgettext"
	],
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"test": "lerna run test"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx lerna run lint:staged --concurrency 1 --stream --since origin/main",
			"pre-push": "npm run test:cov --since origin/main --include-dependents"
		}
	},
	"lint-staged": {
		"*.{js,ts,json,scss,css,md}": [
			"prettier --write"
		],
		"{src,apps,libs,test}/**/*.ts": [
			"eslint"
		]
	},
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"jest": "^29.7.0",
		"jest-cli": "^29.7.0",
		"lerna": "^8.0.2",
		"ts-jest": "^29.1.2"
	}
}
