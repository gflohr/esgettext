{
	"name": "gtx-i18n-runtime",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"build": "webpack",
		"format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
		"start": "webpack --watch",
		"lint": "eslint './src/**/*.ts'",
		"lint:fix": "eslint --fix './src/**/*.ts'",
		"lint:fix-dry-run": "eslint --fix './src/**/*.ts'",
		"lint:staged": "lint-staged",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [],
	"author": "Guido Flohr <guido.flohr@cantanea.com> (http://www.guido.flohr.net/)",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint:staged --concurrency 1 --stream --since origin/master",
			"pre-push": "npm run test:cov --since origin/master --include-dependents"
		}
	},
	"lint-staged": {
		"*.{js,ts,json,md}": [
			"prettier --write"
		],
		"{src,test}/**/*.ts": [
			"eslint"
		]
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.5",
		"lint-staged": "^10.1.7",
		"prettier": "^2.0.5",
		"ts-loader": "^7.0.1",
		"typescript": "^3.8.3",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	}
}
