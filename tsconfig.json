{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitUseStrict": true,
		"removeComments": true,
		"declaration": true,
		"target": "es5",
		"lib": ["es2015", "dom"],
		"module": "commonjs",
		"outDir": "lib",
		"sourceMap": true,
		"typeRoots": ["node_modules/@types"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": []
}
