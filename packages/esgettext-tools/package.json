{
	"name": "@esgettext/tools",
	"version": "0.0.1",
	"description": "Gettext-like po creation and manipulation",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": "https://github.com/gflohr/esgettext",
	"bugs": {
		"url": "https://github.com/gflohr/esgettext/issues"
	},
	"homepage": "https://github.com/gflohr/esgettext/packages/esgettext-tools",
	"files": [
		"bin/",
		"dist/"
	],
	"bin": {
		"gtx-i18n-xgettext": "bin/gtx-i18n-xgettext.js",
		"mo2json": "bin/mo2json"
	},
	"scripts": {
		"build": "yarn run clean && tsc",
		"watch": "tsc --watch",
		"clean": "shx rm -rf ./dist",
		"lint": "eslint './src/**/*.ts'",
		"lint:fix": "eslint --fix './src/**/*.ts'",
		"lint:fix-dry-run": "eslint --fix './src/**/*.ts'",
		"lint:staged": "lint-staged",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
	},
	"author": "Guido Flohr <guido.flohr@cantanea.com> (http://www.guido.flohr.net/)",
	"license": "WTFPL",
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@babel/parser": "^7.9.6",
		"@esgettext/runtime": "^0.0.1",
		"@types/node": "^13.13.2",
		"@types/yargs": "^15.0.4",
		"camelcase": "^6.0.0",
		"iconv-lite": "^0.5.1",
		"typescript": "^3.8.3",
		"yargs": "^15.3.1"
	},
	"devDependencies": {
		"eslint": "^6.8.0",
		"jest": "^25.5.2",
		"shx": "^0.3.2",
		"ts-node": "^8.10.1"
	}
}
